<%- include('header') %>


    <div class="container-fluid">
      <div class="card">
        <div class="card-body">
          <table>
            <thead>
              <tr>
                <th>Title1</th>
                <th>Title2</th>
                <th>slider</th>
                <th>delete</th>
                <th>edit</th>
                <th>status</th>
              </tr>
            </thead>
            <tbody>
              <%alldata.forEach((val)=>{ %>
                  <tr>
                    <td><%=val.title1%></td>
                    <td><%=val.title2%></td>
                    <td><img src="<%= '../' + val.slider_image %>" width="100" alt="slider"/>
                    </td>
                    <td><a href="/admin/deletedata/<%=val.id%>" id="actionbutton">delete</a></td>
                    <td> <a href="/admin/editdata/<%=val.id%>" id="actionbutton">edit</a></td>
                    <td>
                      <% if (val.status == 1) { %>
                        <a href="/admin/deactivate/<%=val.id%>" id="Deactivate">Deactivate</a>
                      <% } else { %>
                        <a href="/admin/activate/<%=val.id%>" id="Activate">Activate</a>
                      <% } %>
                    </td>
                    
                    

                  </tr>
             <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="../assets/libs/jquery/dist/jquery.min.js"></script>
<script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="../assets/js/sidebarmenu.js"></script>
<script src="../assets/js/app.min.js"></script>
<script src="../assets/libs/simplebar/dist/simplebar.js"></script>
</body>
</html>